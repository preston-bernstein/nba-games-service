# Core server
PORT=4000
# Conservative default to respect upstream quota (balldontlie: 5 req/min).
POLL_INTERVAL=2m
PROVIDER=fixture

# Balldontlie provider
BALDONTLIE_BASE_URL=https://api.balldontlie.io/v1
# BALDONTLIE_API_KEY=your_api_key_if_required
# BALDONTLIE_TIMEZONE=America/New_York
# BALDONTLIE_MAX_PAGES=5
# BALDONTLIE_TIMEOUT=10s

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
# Local-friendly overrides:
# LOG_FORMAT=text
# LOG_LEVEL=debug

# Metrics / OTEL
METRICS_ENABLED=true
METRICS_PORT=9090
# OTEL_SERVICE_NAME=nba-games-service
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# OTEL_EXPORTER_OTLP_INSECURE=true # only set true for local/non-TLS collectors; keep false in prod

# Admin/Snapshots
# ADMIN_TOKEN=your_admin_token
# SNAPSHOT_SYNC_ENABLED=true
# SNAPSHOT_SYNC_DAYS=7
# SNAPSHOT_FUTURE_DAYS=7
# SNAPSHOT_SYNC_INTERVAL=90s
# SNAPSHOT_DAILY_HOUR=2

# Catalog
# CATALOG_DB_PATH=data/catalog.db

# --- Tier presets (uncomment to switch) ---
# Free tier (minimize calls)
# PROVIDER=balldontlie
# BALDONTLIE_MAX_PAGES=1
# POLL_INTERVAL=60s
# BALDONTLIE_TIMEOUT=10s

# Higher tier (more frequent polling; tune to quota)
# PROVIDER=balldontlie
# BALDONTLIE_MAX_PAGES=5
# POLL_INTERVAL=30s
# BALDONTLIE_TIMEOUT=10s
